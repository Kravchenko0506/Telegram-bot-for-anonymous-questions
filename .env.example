# ============================================
# ANONYMOUS QUESTIONS BOT - CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# Required fields marked with [REQUIRED]

# ============================================
# BOT CREDENTIALS [REQUIRED]
# ============================================
BOT_TOKEN=your_bot_token_here
ADMIN_ID=123456789
BOT_USERNAME=your_bot_username

# ============================================
# BACKUP SYSTEM [REQUIRED]
# ============================================
BACKUP_RECIPIENT_ID=123456789
BACKUP_ENABLED=true
BACKUP_KEEP_LOCAL_COUNT=3
BACKUP_STORAGE_DIR=./data/backups

# ============================================
# MESSAGE LIMITS
# ============================================
MIN_QUESTION_LENGTH=5
MAX_QUESTION_LENGTH=2500
MAX_ANSWER_LENGTH=6000

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_QUESTIONS_PER_HOUR=500
RATE_LIMIT_COOLDOWN_SECONDS=5

# ============================================
# PAGINATION
# ============================================
QUESTIONS_PER_PAGE=5
SHOW_QUESTION_PREVIEW_LENGTH=200

# ============================================
# ADMIN INTERFACE
# ============================================
ADMIN_AUTO_REFRESH=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=/data/bot.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# ============================================
# SENTRY (Error Tracking) - Optional
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1
ENABLE_PERFORMANCE_MONITORING=false

# ============================================
# DEBUG - Only for development
# ============================================
DEBUG_MODE=false
VERBOSE_DATABASE_LOGS=false
